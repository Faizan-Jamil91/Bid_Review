{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["hkg1"],
  "env": {
    "NEXT_PUBLIC_API_URL": "@backend-api-url"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "@backend-api-url/api/:path*"
    },
    {
      "source": "/media/:path*",
      "destination": "@backend-api-url/media/:path*"
    }
  ]
}
